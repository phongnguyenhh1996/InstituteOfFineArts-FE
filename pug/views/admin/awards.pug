extends /default.pug

block scripts
  if !starter
    script(src='js/awards.js')

block view
  .animated.fadeIn
    .row
      .col-lg-12.mt-4
        .card
          .card-header.d-flex.align-items-center
            div.mr-auto.mb-0
              i.fas.fa-award.mr-2
              | Awards
            a.btn.btn-primary(href="#",data-toggle='modal',data-target='#exampleModal', data-backdrop='static')
              i.fas.fa-plus.mr-2
              | Add award
          .card-body
            #awardList.row
              a#awardItem.hide.col-4.d-flex.flex-column.mb-2(href="admin/compertition-detail.html?id=1", style="text-decoration: none; display: none")
                .compertition-item.mb-2(style="background-image: url(https://images.unsplash.com/photo-1555848960-c881e30379c0?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80)")
                h5.text-primary(name="AwardName") FOCUS photo l.a. Winter 2019 Juried Exhibition in Los Angeles!
                p.text-dark(name="AwardDetail") Compete for the chance to join the panel at the Credit Suisse Event at the 2020 World Economic Forum in Davos!
    #exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#exampleModalLabel.modal-title Add award
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
            .row
              .col-sm-12
                .form-group
                  label(for='AwardName') Award name
                  input#AwardName.form-control(name='AwardName',type='text')
            // /.row
            .row
              .col-sm-12
                .form-group
                  label(for='AwardDetail') Adward detail
                  textarea#AwardDetail.form-control(name='AwardDetail', row='4', type='text')
          .modal-footer
            button.btn.btn-secondary(type='button' data-dismiss='modal') Close
            button#addAward.btn.btn-primary(type='button') Save changes

