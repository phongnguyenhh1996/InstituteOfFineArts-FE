extends /default.pug

block scripts
  if !starter
    // Plugins and scripts required by this view
    script(src='js/posting.js')

block view
  .animated.fadeIn
    .row
      .col-lg-12.mt-4
        .card
          .card-header
            i.fas.fa-pencil-ruler
            | Posting list
          .card-body
            .row
              .col-12
                #postingList.grid
                  .grid-sizer.col-6.col-lg-4
                  #postingItem.grid-item.col-6.col-lg-4
                    a.d-block.material-shadow.rounded.posting-item.my-3(href="#")
                      img#postingImg.rounded-top.img-fluid(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/orange-tree.jpg')
                      #postingPointWrapper.posting-item__infor
                        span.badge.badge-pill.badge-success.p-1
                          i.fas.fa-star.mr-1
                          span#postingPoint 8.5 points
                      p.bg-primary.text-white.rounded-bottom.p-2.mb-0.font-italic
                        i.fas.fa-quote-left.mr-2
                        span#postingQuote I love you the more in that I believe you had liked me for my own sake and for nothing else.
